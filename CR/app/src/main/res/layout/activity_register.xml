<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity"
    android:background="@color/Bej">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:text="Регистрация"
        android:textStyle="bold"
        android:textSize="30sp"
        android:id="@+id/text"
        android:layout_marginTop="30dp"
        android:gravity="center"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height= "48dp"
        android:id="@+id/email"
        android:layout_marginTop="30dp"
        android:hint="Введите свой Email"
        android:layout_below="@+id/text"
        android:background="@drawable/color_text_view"
        android:layout_marginHorizontal="15dp"
        android:padding="10dp"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:id="@+id/pwd"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/email"
        android:hint="Введите свой пароль"
        android:background="@drawable/color_text_view"
        android:layout_marginHorizontal="15dp"
        android:padding="10dp"/>

    <Button
        android:id="@+id/btn_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pwd"
        android:layout_alignStart="@+id/pwd"
        android:layout_alignEnd="@+id/pwd"
        android:layout_marginTop="11dp"
        android:backgroundTint="@color/Orange"
        android:gravity="center"
        android:text="Регистрация"
        android:layout_marginHorizontal="90dp"/>

    <Button
        android:id="@+id/btn_login1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_register"
        android:layout_alignStart="@+id/btn_register"
        android:layout_alignEnd="@+id/btn_register"
        android:layout_marginTop="16dp"
        android:backgroundTint="@color/Orange"
        android:gravity="center"
        android:text="Уже зарегистрирован" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_login1"
        android:layout_alignStart="@+id/btn_login1"
        android:layout_alignEnd="@+id/btn_login1"
        android:layout_marginStart="44dp"
        android:layout_marginTop="254dp"
        android:layout_marginEnd="44dp"
        android:backgroundTint="@color/Orange"
        android:gravity="center"
        android:onClick="showDialog"
        android:text="Помощь" />
</RelativeLayout>
